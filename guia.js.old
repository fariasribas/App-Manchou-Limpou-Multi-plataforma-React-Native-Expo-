// Screen3.js
import React, { useEffect, useState } from "react";
import { View, ActivityIndicator, Alert } from "react-native";
import { WebView } from "react-native-webview";

const Screen3 = ({ route }) => {
  const { stainType } = route.params; // Receber o tipo de mancha
  const [content, setContent] = useState("");
  const [loading, setLoading] = useState(true);

  useEffect(() => {
    const loadGuide = async () => {
      try {
        // Converte o stainType para minúsculas, remove espaços e "manchasde"
        const formattedStainType = stainType
          .toLowerCase()
          .replace(/\s/g, "")
          .replace("manchasde", "");

        const response = await fetch(
          `https://apps.fariasribas.com.br/stain-guides/${formattedStainType}.html` // Substitua pela URL correta
        );

        if (!response.ok) {
          throw new Error("Guia não encontrado.");
        }

        const text = await response.text();
        setContent(text);
      } catch (error) {
        Alert.alert("Erro", error.message);
        setContent("<p>Guia não encontrado.</p>");
      } finally {
        setLoading(false);
      }
    };

    loadGuide();
  }, [stainType]);

  if (loading) {
    return (
      <View style={{ flex: 1, justifyContent: "center", alignItems: "center" }}>
        <ActivityIndicator size="large" color="#0000ff" />
      </View>
    );
  }

  return (
    <View style={{ flex: 1 }}>
      <WebView
        originWhitelist={["*"]}
        source={{ html: content }}
        style={{ flex: 1 }}
      />
    </View>
  );
};

export default Screen3;
